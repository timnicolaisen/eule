@model GUIManagement.EmployeeDetailsViewItem
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";  
}

<h2>Mitarbeiter Information</h2>

<p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="">
        
        <ul class="nav nav-tabs">
            <li class="active"><a href="#profile" data-toggle="tab">Stammdaten</a></li>
            <li><a href="#password" data-toggle="tab">Passwort</a></li>
            <li><a href="#log" data-toggle="tab">Log</a></li>
        </ul>
        
        <div id="myTabContent" class="tab-content">
            <div class="tab-pane active in" id="profile">
                <img class="img-circle" src=""></img>
                <br />
                <br />
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.DisplayNameFor(model => model.FirstName)
                        </div>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.DisplayNameFor(model => model.LastName)
                        </div>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.DisplayNameFor(model => model.UserName)
                        </div>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.DisplayNameFor(model => model.Email)
                        </div>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.DisplayNameFor(model => model.ShiftGroupPartnerName)
                        </div>
                        <div class="col-md-9">
                            @Html.DropDownList("Mitarbeiter", (IEnumerable<SelectListItem>)ViewBag.Employee, "Kein Schichtpartner", new { @class = "form-control dropdown-toggle" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2">
                            @Html.DisplayNameFor(model => model.RoleName)
                        </div>
                        <div class="col-md-9">
                            <div class="dropdown">
                                @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...", new { @class = "form-control dropdown-toggle" })
                               
                            </div>

                        </div>
                    </div>
                   
                    <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="&#220;bernehmen" class="btn btn-primary" />
                    </div>
                </div>
</div>


                </div>
            <div class="tab-pane fade" id="password">
                <form id="tab2">
                    @{ Html.RenderAction("SetPassword", "Manage");}
                </form>
            </div>
            <div class="tab-pane fade" id="log">
                
            </div>
        </div>
    </div>

}

        @Html.ActionLink("Zurueck zur Mitarbeiterliste", "Index")
</p>
    @section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    }


